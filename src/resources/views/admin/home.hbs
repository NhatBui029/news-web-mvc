<a href="/admin/create-post" class="btn btn-primary">Tạo Mới</a>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tiêu đề</th>
      <th scope="col">Tác giả</th>
      <th scope="col">Thời gian</th>
      <th scope="col">Hành động</th>
    </tr>
  </thead>
  <tbody>
    {{#each posts}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.author}}</td>
        <td>{{formatDate this.createdAt}}</td>
        <td>
          <a
            href="/admin/post/{{this.id}}"
            class="btn btn-info btn-sm "
            tabindex="-1"
            role="button"
          >Sửa</a>
          <a
            href="/admin/delete/{{this.id}}"
            class="btn btn-danger btn-sm "
            tabindex="-1"
            role="button"
          >Xoá</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>